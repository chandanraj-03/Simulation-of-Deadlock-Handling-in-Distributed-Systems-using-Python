# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Settings
STREAMLIT_PORT=8503
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_LOGGER_LEVEL=info

# Development
DEBUG=false
LOG_LEVEL=INFO

# Network (for multi-node setup)
DEFAULT_NODE_IP=127.0.0.1
DEFAULT_NODE_PORT=5001
DEFAULT_PEER_IP=127.0.0.1
DEFAULT_PEER_PORT=5002

# Simulation Defaults
DEFAULT_NUM_PROCESSES=4
DEFAULT_NUM_RESOURCES=3
DEFAULT_MODE=detection

# Timeouts
CONNECTION_TIMEOUT=2
REQUEST_TIMEOUT=5

# Feature Flags
ENABLE_MULTI_NODE=true
ENABLE_AUTO_PILOT=true
ENABLE_LOGGING=true
